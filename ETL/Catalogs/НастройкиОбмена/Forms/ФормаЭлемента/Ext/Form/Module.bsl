		Элементы.Группа2.ТолькоПросмотр = Ложь;
		Элементы.Группа4.ТолькоПросмотр = Ложь;
	Иначе
		Элементы.Группа2.ТолькоПросмотр = Истина;
		Элементы.Группа4.ТолькоПросмотр = Истина;
	КонецЕсли;
	
