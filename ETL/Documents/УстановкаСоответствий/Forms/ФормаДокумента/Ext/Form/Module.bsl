Функция СписокЭталоновНаОсновании()
	// Вставить содержимое обработчика.
	
	МассивСоответствий = Новый Массив;

	    Если НЕ ЗначениеЗаполнено(Объект.ТипЭталона) Тогда
        Сообщить("Тип эталона не указан. Создание на основании не возможно!", СтатусСообщения.Важное);
        Возврат МассивСоответствий;
    КонецЕсли;
    
    Запрос = Новый Запрос;
    Запрос.Текст = 
        "ВЫБРАТЬ
        |    ТипыЭталонов.Ссылка КАК ТипЭталона,
        |    ТипыЭталонов.ТипЗначения,
        |    ТипыЭталонов.Реквизиты.(
        |        Реквизит,
        |        Реквизит.ТипЗначения КАК ТипЗначенияРеквизита
        |    ) КАК Реквизиты
        |ИЗ
        |    ПланВидовХарактеристик.ТипыЭталонов КАК ТипыЭталонов";
    
    РезультатЗапроса = Запрос.Выполнить();
    Выборка = РезультатЗапроса.Выбрать();   
		    
   
    ТекущиеРеквизиты = Новый Массив;
    
    Пока Выборка.Следующий() Цикл
        Если Выборка.ТипЭталона = Объект.ТипЭталона Тогда
            ВыборкаРеквизиты = Выборка.Реквизиты.Выбрать();
            Пока ВыборкаРеквизиты.Следующий() Цикл
                СтруктураРеквизита = Новый Структура;
                СтруктураРеквизита.Вставить("Реквизит", ВыборкаРеквизиты.Реквизит);
                СтруктураРеквизита.Вставить("Типы", ВыборкаРеквизиты.ТипЗначенияРеквизита.Типы());
                ТекущиеРеквизиты.Добавить(СтруктураРеквизита);
            КонецЦикла;
            Прервать;
        КонецЕсли;
    КонецЦикла;
    
    // Если у текущего ТипЭталона нет реквизитов, выходим
    Если ТекущиеРеквизиты.Количество() = 0 Тогда
        Сообщить("У указанного типа эталона нет реквизитов.", СтатусСообщения.Информация);
        Возврат МассивСоответствий;
    КонецЕсли;
    
    // Сбрасываем выборку для проверки других ТиповЭталонов
    Выборка.Сбросить();
    
    // Проверяем типы значений других ТиповЭталонов
    Пока Выборка.Следующий() Цикл
        // Пропускаем текущий ТипЭталона
        Если Выборка.ТипЭталона = Объект.ТипЭталона Тогда
            Продолжить;
        КонецЕсли;
        
        // Получаем типы значения текущего другого ТипЭталона
        ТипыДругогоЭталона = Выборка.ТипЗначения.Типы();
        
        // Проверяем каждый реквизит текущего ТипЭталона
        Для Каждого ТекущийРеквизит Из ТекущиеРеквизиты Цикл
            Для Каждого ТипРеквизита Из ТекущийРеквизит.Типы Цикл
                // Проверяем совпадение с типами другого ТипЭталона
                Если ТипыДругогоЭталона.Найти(ТипРеквизита) <> Неопределено Тогда
                    // Найдено совпадение, добавляем в массив
                    СтруктураСоответствия = Новый Структура;
                    СтруктураСоответствия.Вставить("ТипЭталона", Выборка.ТипЭталона);
                    СтруктураСоответствия.Вставить("Реквизит", ТекущийРеквизит.Реквизит);
                    МассивСоответствий.Добавить(СтруктураСоответствия);
                КонецЕсли;
            КонецЦикла;
        КонецЦикла;
    КонецЦикла; 
	
	Возврат МассивСоответствий;
    
КонецФункции



